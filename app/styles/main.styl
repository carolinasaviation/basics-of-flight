@import nib
@import url('../bower_components/normalize-css/normalize.css')


*
	moz-box-sizing border-box
	-webkit-box-sizing border-box
	box-sizing: border-box

img
	max-width 100%

html
	background #606060

body
	background: #191919
	font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
	color: #333

	position: absolute
	top: 50%
	left: 50%
	margin-left: -512px
	margin-top: -384px
	height: 768px
	width: 1024px

// {{{ nav
.nav
	absolute top 0 left 0
	width 8em

.nav-item
	background #fff
	display block
	padding: 1em
	text-decoration none

.nav-item-active
	background #f2ec59

.nav-image
	display block
	margin 0 auto
	max-height 6em
	max-width 80%

.nav-text
	color #999
	display block
	position relative
	left -0.75em
	top 1.5em
	transform-origin 0% 0%
	transform rotate(-90deg)

// nav }}}
// {{{ subnav
.subnav
	absolute top 0 left 8em
	z-index 10

.subnav-item
	background #fff
	color #999
	display inline-block
	padding: 1em
	text-decoration none

.subnav-item-active
	background #f2ec59

// subnav }}}
// {{{ cards

h1
	margin-top 0

.page
	padding: 3em 1.5em 1.5em 9.5em

.card
	background #fff
	border #ccc

.card-primary
	padding 0.75em
	width 62%

.card-secondary
	width 38%

.card-primary,
.card-secondary,
.column
	display: inline-block
	vertical-align: top

.column-golden-large
	width 62%
.column-golden-small
	width 38%

// cards }}}

// {{{ animations

@keyframes slideUpAndFadeOut
	from
		transform translateY(0)
		opacity 1
	to
		transform translateY(-12em)
		opacity 0

@keyframes slideDownAndFadeIn
	from
		transform translateY(-12em)
		opacity 0
	to
		transform translateY(0)
		opacity 1

.slideUpAndFadeOut
	animation-duration: 1s
	animation-name: slideUpAndFadeOut
	animation-iteration-count: 1
	animation-fill-mode: forwards

.slideDownAndFadeIn
	animation-duration: 1s
	animation-name: slideDownAndFadeIn
	animation-direction: alternate
	animation-fill-mode: forwards


// animations }}}
