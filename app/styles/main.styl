@import nib
@import url('../bower_components/normalize-css/normalize.css')
@import url('../bower_components/league-gothic/webfonts/stylesheet.css')
YELLOW = #feec09
RED = #f0402a
ACTION_RED = #ed1c24
BLACK = #202020

/* general {{{ */
*
	box-sizing border-box

img
	max-width 100%

html
	background BLACK
	width 100%
	height 100%
	overflow hidden

body
	background #202020
	font-family "Helvetica Neue", Helvetica, Arial, sans-serif
	color #333
	//width 100%
	height 100%
	margin-left 13em

.fakepad
	position: absolute
	top: 50%
	left: 50%
	margin-left: -512px
	margin-top: -384px
	height: 768px
	width: 1024px

.col
	display inline-block
	vertical-align top
	padding-bottom 1.333em

.btn
	display inline-block
	&:focus
		outline 0

.hardware-hack
	// http://blog.alexmaccaw.com/css-transitions
	font-smoothing antialiased
	transform translate3d(0,0,0);

/* general }}} */
// {{{ nav
.nav>ul
	absolute top bottom
	left 0
	width 6em
	z-index 11
	margin 0
	padding 0
	list-style none

.nav-item-container
	height 33.333%
	position relative
	perspective 500px

.nav-item
	color #464646
	display block
	height 100%
	padding 1em
	position relative
	overflow hidden
	text-decoration none
	&:after
		transition width ease 0.5s
		absolute top bottom
		background YELLOW
		right 0
		width 2px
		content ' '
		z-index 0

.nav-item-active
	color #131313
	&:after
		width 100%

.nav-image
	display block
	margin 0 auto
	//max-height 6em
	max-width 96%
	line-height 100%
	position relative
	z-index 2

.nav-text
	absolute left 50% top 50%
	z-index 2
	margin-left -5em
	margin-top -0.5em
	width 10em
	transform-origin 50% 50%
	transform rotate(-90deg)

	font-size 4em
	font-weight bold
	display block
	text-align center
	text-transform uppercase
	font-family 'League Gothic'
	font-weight 400

// nav }}}
// {{{ subnav
.subnav
	absolute top bottom
	left 6em
	width 7em
	z-index 10
	list-style none
	margin 0
	padding 0

	background BLACK
	transform rotateY(45deg)
	transform-origin 0 50%
	transition all 0.4s ease

.subnav-item-container
	position relative

.subnav-item
	color #404040
	display block
	font-weight bold
	letter-spacing 1px
	padding: 0.41666em 1em
	text-decoration none
	text-transform uppercase
	&:after
		content ' '
		absolute top bottom
		left 0
		width 0%
		background YELLOW
		transition width ease 0.5s
		z-index -1

// TODO add more classes via javascript and clean up these selectors
.nav-item-active + .subnav
	transform rotateY(0)
	.subnav-item
		color #f0f0f0

.subnav-item-active
	color #131313 !important
	&:after
		width 100%

// subnav }}}
// {{{ cards

h1
	color YELLOW
	font-family 'League Gothic'
	font-size 3em
	font-weight 400
	letter-spacing 1px
	margin 0
	text-transform uppercase

.page
	height 100%
	padding 0 0 200px
	position relative

.card
	background BLACK
	border-top: 3px solid YELLOW
	color #fff
	absolute left right
	bottom 0
	height 200px

	h1
		margin-top 0

.card-content
	height 100%
	overflow-y auto
	padding 0.5em
	width 75%

	&:before,
	&:after
		absolute left 0
		width 50%
		display block
		content ' '
		height 0

	&:before
		top 0
		box-shadow 0 2px 8px 1px #000

	&:after
		bottom 0
		box-shadow 0 -2px 8px 1px #000

.card-film
	width 15%

.card-content,
.card-tabs,
.card-film,
.column
	display: inline-block
	vertical-align: top

.column-golden-large
	width 62%
.column-golden-small
	width 38%

.card-content--inactive
	display none

.card-stage
	absolute left right
	bottom 0
	// this has to be a hack
	perspective 300000
	perspective-origin 50% 50%
	z-index 10
	height 200px

.card-rotator
	position relative
	height 100%
	width 100%
	transform-origin 50% 50%
	transform rotateX(0deg)
	transition all 0.5s ease
	transform-style preserve-3d

.card
	transform rotateX(0deg) translate3d(0, 0, 100px);
	transition border-top 0.25s ease
	overflow hidden

// cards }}}
// {{{ sections

.card-tabs
	height 100%
	width 10%
.card-tabs .btn
	height 33.3333%

.card-film,
.btn-film
	height 100%

.btn
	background-color transparent
	border-radius 0
	border 0

.btn-go-back
	absolute bottom 0 right 25%
	color ACTION_RED
	text-transform uppercase

.btn-quiz,
.btn-history,
.btn-science
	border-right 4px solid transparent
	width 100%
	svg
		max-width 95%
		max-height 100%
		*
			animation actionPulse 3s infinite
			animation-timing-function cubic-bezier(0.250, 0.100, 0.250, 1.000)
.btn--is-active
	border-right-color YELLOW
	//color YELLOW
	svg
		max-width 95%
		*
			animation none
			stroke YELLOW

.btn-quiz svg *
	animation-delay 0
.btn-science svg *
	animation-delay 1s
.btn-history svg *
	animation-delay 2s

.btn-film
	background-image url(../images/throwaway-play-film.jpg)
	background-size cover
	color ACTION_RED
	font-size 2em
	font-weight bold
	text-transform uppercase

// sections }}}
// {{{ quiz

.col__quiz-equation
	text-align center
	width 20%
.col__quiz-question
	width 80%
.col__quiz-question--active
	padding 0 1em
	//display block
	opacity 1

.col__quiz-question--inactive
	display none

.quiz__correct
	margin 0 auto
	width 50%

.quiz__correct-title
	font-size 1em
	font-weight normal
	text-transform uppercase

.quiz__correct-count
	display block
	font-size 2em
	text-align left

.quiz__correct-total
	display block
	font-size 2em
	text-align right

.quiz__answer-list
	list-style none
	padding 0
	li
		border-top 1px solid #777
		&:first-child
			border-top 0

	label
		display block
		padding 0.666em
		transition all 0.1666s ease-out

	input[type="radio"]
		display none

	input[type="radio"]:checked + label
		background YELLOW
		color BLACK


label[for]
	cursor pointer

// quiz }}}
// {{{ Forces::weight

#weightInteraction
	height 100%
	width 100%

.cessna
	img
		position relative
		z-index 1
	.arrow
		background YELLOW
		position relative
		display inline-block
		height 60px
		width 2px
		&:after
			absolute bottom -2px
			left -6px
			border-left 7px solid transparent
			border-right 7px solid transparent
			border-top 7px solid YELLOW
			content ''

.forces-arrows
	.arrow
		animation-timing-function ease
		animation-duration 0.666s
		animation-iteration-count infinite
		animation-direction alternate
		animation-name forcesArrow
	.arrow-n,
	.arrow-s,
	.arrow-w,
	.arrow-e
		position absolute
		height 0
		width 0

	.arrow-n
		left 40%
		top 20%
		transform rotate(180deg)
	.arrow-s
		left 37%
		top 66%
	.arrow-w
		bottom 36%
		left 11%
		transform rotate(65deg)
	.arrow-e
		top 22%
		left 76%
		transform rotate(-115deg)

@keyframes forcesArrow
	from
		transform translateY(0em)
		opacity 1
	to
		transform  translateY(1em)
		opacity 0.6

.weight-arrows
	position absolute
	left 20%
	bottom 15%
	transform skewX(13deg)
	.arrow
		background YELLOW
		position relative
		display inline-block
		margin 0 20px
		height 60px
		width 2px
		&:after
			absolute bottom
			left -4px
			border-left 5px solid transparent
			border-right 5px solid transparent
			border-top 5px solid YELLOW
			content ''

// Forces::weight }}}
// {{{ Forces::drag

#dragInteraction
	height 100%
	width 100%

@keyframes dragArrow
	from
		transform translateX(0em)
		opacity 1
	to
		transform  translateX(1em)
		opacity 0.6

.drag-arrows
	absolute left 80% top 5%
	top 5%
	transform skewX(13deg);
	.arrow
		background YELLOW
		position relative
		display block
		margin 20px 0
		height 2px
		width 60px
		&:after
			absolute left 100% top -4px
			border-top 5px solid transparent
			border-bottom 5px solid transparent
			border-left 5px solid YELLOW
			content ''

// Forces::weight }}}
// {{{ animations

@keyframes actionPulse
	20%
		stroke #202020
	50%
		stroke ACTION_RED
	80%
		stroke #202020

// animations }}}
