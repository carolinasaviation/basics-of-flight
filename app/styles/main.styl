input[type="range"]
	//-webkit-appearance none
	-moz-appearance none
	appearance none
	height 24px
	background RED
	border-radius 0 12px 0 0
	absolute left bottom
	right 300px
	z-index 5

input[type="range"]::-webkit-slider-thumb
	appearance none
	width 24px
	height 24px
	border-radius 100%
	border 4px solid darken(RED, 40%)
	background darken(RED, 60%)

.interactive
	absolute left right
	top 0
	bottom 200px

.display
	absolute bottom right
	z-index 5

table
	tr:first-child th
		border-top 0
	th
		color #aaa
		text-align left
		padding 0.333em
		border-top 1px solid RED
		text-transform uppercase
	td
		color #fff
		padding 0.333em 0.6666em
		width 8em

